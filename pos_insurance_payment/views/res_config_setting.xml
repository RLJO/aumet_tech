<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pos_account_res_config_settings_form_insurance_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.from.insurance</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]/div[@data-key='account']" position="inside">
                    <h2>Insurance Commission</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="pos_account_id" class="col-md-3 o_light_label"
                                               style="font-weight:bold;"/>
                                        <field name="insurance_commission_account_id"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
