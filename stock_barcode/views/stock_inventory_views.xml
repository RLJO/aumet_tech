<?xml version="1.0" encoding="utf-8"?>
<odoo><data>
    <record id="stock_inventory_form_view_inherit" model="ir.ui.view">
        <field name="name">stock.inventory.form.view.inherit</field>
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock.view_inventory_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[@name='button_box']" position="inside">
                <button name="action_client_action"
                    string="Barcode"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-barcode"
                    attrs="{'invisible': [('state', 'in', ['draft', 'done'])]}"
                    />
            </xpath>
            <field name="line_ids" position="replace"></field>
            <sheet position="inside">
                <notebook>
                    <page>
                        <field name="line_ids">
                            <tree default_order="location_id,product_id" editable="bottom" string="Inventory Details" js_class="inventory_validate_button"
                                  decoration-danger="product_qty != theoretical_qty"
                                  decoration-muted="product_qty == theoretical_qty"
                                  decoration-bf="is_editable"
                                    context="{'default_is_editable': True, 'default_inventory_id': active_id, 'default_location_id': 8, 'readonly_location_id': True}">
                                <field name="company_id" invisible="1"/>
                                <field name="product_tracking" invisible="1"/>
                                <field name="is_editable" invisible="1"/>
                                <field name="outdated" invisible="1"/>
                                <!--<field name="default_location_id" />-->
                                <field name="product_id" width="1.6"
                                       context="{'default_type': 'product'}"/>
                                <field name="location_id" groups="stock.group_stock_multi_locations"
                                       options="{'no_create': True}"
                                       invisible="context.get('readonly_location_id', False)"
                                       readonly="context.get('readonly_location_id', False)"
                                       attrs="{'readonly': ['|',
                                            ('is_editable', '=', False),
                                            ('state', '!=', 'confirm')]}"/>
                                <field name="inventory_date" optional="hide" width="0.8"/>
                                <field name="expiration_date" groups="stock.group_production_lot" width="0.8"/>
                                <field name="package_id" groups="stock.group_tracking_lot" width="0.8"
                                       attrs="{'readonly': ['|',
                                            ('is_editable', '=', False),
                                            ('state', '!=', 'confirm')]}"
                                       string="Package" optional="show"/>
                                <field name="partner_id" groups="stock.group_tracking_owner"
                                       attrs="{'readonly': ['|',
                                            ('is_editable', '=', False),
                                            ('state', '!=', 'confirm')]}"/>
                                <field name="theoretical_qty" string="On Hand" width="0.5"
                                       force_save="1" readonly="1" optional="show"/>
                                <button name="action_refresh_quantity" title="Refresh quantity"
                                        icon="fa-refresh" type="object"
                                        attrs="{'invisible': [('outdated', '=', False)]}"/>
                                <field name="product_qty" width="0.5" string="Counted"/>
                                <field name="sale_price" />
                                <field name="difference_qty" optional="show" width="0.5"/>
                                <field name="product_uom_id" string="UoM" groups="uom.group_uom"
                                       width="0.3" force_save="1"/>
                                <field name="inventory_id" invisible="1"/>
                                <field name="state" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </sheet>
        </field>
    </record>

    <record id="stock_inventory_barcode2" model="ir.ui.view">
        <field name="name">stock.inventory.form.view.barcode</field>
        <field name="model">stock.inventory</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <form string="Inventory Details">
                <group>
                    <field name="product_ids" attrs="{'invisible': [('product_ids', '=', False)]}"/>
                    <field name="location_ids" options="{'no_create': True}"
                           attrs="{'invisible': [('location_ids', '=', False)]}" />
                    <field name="date" attrs="{'invisible': [('date', '=', False)]}" />
                    <field name="state" attrs="{'invisible': [('state', '=', False)]}" />
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="move_ids" context="{'default_inventory_id': id}" string="Inventory Adjustments">
                        <tree>
                            <field name="product_id"/>
                            <field name="location_id" options="{'no_create': True}" string="From"/>
                            <field name="location_dest_id" options="{'no_create': True}" string="To"/>
                            <field name="quantity_done"/>
                            <field name="state" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record id="stock_inventory_line_barcode" model="ir.ui.view">
        <field name="name">stock.inventory.barcode</field>
        <field name="model">stock.inventory.line</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="product_tracking" invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="product_id"
                        attrs="{'readonly': [('state', '=', 'done')]}"
                        domain="[('type', 'in', ['product'])]"
                        required="1"/>
                    <field name="expiration_date" attrs="{'invisible': ['|',('product_tracking', '=','none'), ('product_id','=', False)], 'required': [('product_tracking', '!=', 'none')]}"
                           context="{'default_company_id': company_id, 'default_product_id': product_id}" domain=""/>
                    <field name="theoretical_qty" readonly="1"/>
                    <field name="product_qty" string="Real Quantity" />
                    <field name="sale_price" string="Sale Price" />
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                    <field name="product_uom_id" groups="uom.group_uom" attrs="{'readonly': [('product_qty', '!=', 0.0)]}" />
                    <field name="location_id" options="{'no_create': True}" groups="stock.group_stock_multi_locations"/>
                    <field name="package_id" groups="stock.group_tracking_lot" domain="[('location_id', '=', location_id)]"/>
                </group>
            </form>
        </field>
    </record>

    <record id="stock_inventory_line_tree_inherite" model="ir.ui.view">
        <field name="name">stock.inventory.line.tree.view.inherit</field>
        <field name="model">stock.inventory.line</field>
        <field name="inherit_id" ref="stock.stock_inventory_line_tree"/>
        <field name="arch" type="xml">
            <field name="product_qty" position="after">
                <field name="sale_price" />
            </field>
        </field>
    </record>

</data></odoo>
